def get_message(age: int) -> str:
    """
    Returns a message based on the input age.
    """
    if age < 0:
        return "You are not even born yet!"
    elif age >= 100:
        return "Wow, you've lived a long life!"
    elif age >= 65:
        return "Congratulations on reaching retirement age!"
    elif age >= 50:
        return "You're in your fifties! You're halfway to a hundred!"
    elif age >= 40:
        return "You're over the hill. But don't worry, life begins at forty!"
    elif age >= 30 and age % 2 == 0:
        return "You're in your thirties and you're even! How lucky!"
    elif age >= 30:
        return "You're in your thirties! It's time to start making some serious life decisions."
    elif age >= 21:
        return "Congratulations! You're legally allowed to drink in the United States!"
    elif age == 18:
        return "You've reached legal adulthood! Time to take on the world."
    elif age > 13:
        return "You're a teenager! The world is your oyster."
    else:
        return "You qualify for the kiddie discount! Make the most of it while you can!"


if __name__ == "__main__":
    # Main program
    while True:
        # Ask for age input from the user
        age_input = input("Please enter your age (or type 'quit' to exit): ")

        # Check if the user wants to exit the program
        if age_input.lower() == 'quit':
            break

        # Keep asking until the user inputs a valid integer age
        try:
            age = int(age_input)
        except ValueError:
            print("Invalid input. Please enter a valid age or type 'quit' to exit.")
            continue

        # Get the message based on the age and print it
        message = get_message(age)
        print(message)
