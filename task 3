def get_age_input() -> int:
    """
    Returns the valid age input from the user as an integer.
    """
    while True:
        # Ask for age input from the user
        age_input = input("Please enter your age (or type 'quit' to exit): ")

        # Check if the user wants to exit the program
        if age_input.lower() == 'quit':
            return None

        # Try to convert the input to an integer, and return it if valid
        try:
            age = int(age_input)
            return age
        except ValueError:
            print("Invalid input. Please enter a valid age or type 'quit' to exit.")


def print_message(age: int) -> None:
    """
    Prints the message based on the input age.
    """
    message = get_message(age)
    print(message)


if __name__ == "__main__":
    # Main program
    while True:
        # Get the age input from the user
        age = get_age_input()

        # Exit the program if the user types 'quit'
        if age is None:
            break

        # Print the message based on the age input
        print_message(age)
